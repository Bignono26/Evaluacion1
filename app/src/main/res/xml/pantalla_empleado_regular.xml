<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PantallaRegularActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:padding="20dp"
        android:text="Volver atrás"
        android:onClick="volver"
        android:textColor="#FFF"
        android:background="#00668B"
        android:id="@+id/btnBack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empleado Regular"
            android:textSize="32sp"
            android:textColor="#00668B"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:inputType="number"
            android:hint="Ingrese Sueldo Bruto"
            android:id="@+id/editSueldoBruto"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Calcular Sueldo Líquido"
            android:textColor="#FFF"
            android:background="#00668B"
            android:id="@+id/btnCalcularSueldoLiquido"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/tvSueldoLiquido"/>

    </LinearLayout>
</LinearLayout>